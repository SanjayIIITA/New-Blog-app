<h2>My Blog </h2>

<% @blog_posts.each do |blog_post| %>
    <div>
        <%#= link_to blog_post.title, "blog_posts/#{blog_post.id}" %>
        <h2><%= link_to blog_post.title, blog_post %></h2>
        <% if blog_post.draft? %>
         <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
        <% elsif blog_post.scheduled? %>
         <div class="p-2 rounded bg-gray-100 text-gray-900">Scheduled</div> 
        <% end %>
        <%= blog_post.body %>
    </div>
<% end %>
<%if @pagy.count > @pagy.items %>
    <div class="mt-26">
    <%== pagy_nav(@pagy) %>
    </div> 
<% end%>